<h1>Beer places search</h1>

<%= form_tag places_path do %>
	city <%= text_field_tag :city, params[:city] %>
	<%= submit_tag "Search" %>
<% end %>

<% if @places %>
	<table>
		<thead>
			<% Place.rendered_fields.each do |k| %>
				<td> <%=k %> </td>
			<% end %>
		</thead>
		<tbody>
			<% @places.each do |place| %>
				<tr>
					<% Place.rendered_fields.each do |k| %>
						<td> <%=place.send(k) %> </td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>
