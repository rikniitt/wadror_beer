<h1>Beer Styles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style_path(style) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Style', new_style_path, class: 'btn btn-primary' if current_user %>
