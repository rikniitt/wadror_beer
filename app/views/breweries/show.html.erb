<p id="notice"><%= notice %></p>

<h2>
	<%= @brewery.name %>
	<% if not @brewery.active  %>
		<span class="label">retired</span>
	<% end %>
</h2>


<p>
	<em>
		Established year 
		<%= @brewery.year %>
	</em>
</p>

<p>
	<strong>Number of beers:</strong>
	<%= @brewery.beers.count %>
</p>

<p>
	<strong>Beers: </strong>
	<ul>
		<% @brewery.beers.each do |beer| %>
			<li><%= link_to beer.name, beer %></li>
		<% end %>
	</ul>
</p>

	
<% if not @brewery.ratings.empty? %>
	<p>
		<%= pluralize(@brewery.beers.length, 'beer of the brewery have', 'beer of the brewery has') %>  <%= pluralize(@brewery.ratings.length, 'rating') %>, average <%= round @brewery.average_rating %>
	</p>
<% end %>

<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), :method => :post, :class => "btn" %>
<%= show_page_buttons edit_brewery_path(@brewery), @brewery, breweries_path %>
